{
  "name": "mdserve2",
  "version": "0.0.1",
  "description": "serves Markdown files as GitHub style HTML your files in the browser",
  "preferGlobal": true,
  "scripts": {
    "test": "xo && npm run cover",
    "cover": "nyc --reporter=lcov --reporter=html --reporter=text ava **/*.test.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v"
  },
  "keywords": [
    "markdown",
    "server",
    "github",
    "realtime",
    "highlighting",
    "code",
    "syntax highlighting",
    "links",
    "markdown-it"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "bin": {
    "mdserve": "cli.js"
  },
  "files": [
    "server.js",
    "cli.js",
    "assets/less/github.less",
    "assets/less/style.less"
  ],
  "author": "GROOT <pzyme@outlook.com>",
  "email": "pzyme@outlook.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pgroot/mdserve.git"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "chalk": "^2.4.0",
    "commander": "^2.5.1",
    "connect": "^3.6.5",
    "connect-livereload": "^0.6.0",
    "express": "^4.16.3",
    "jsdom": "^11.8.0",
    "less": "^2.7.2",
    "livereload": "^0.7.0",
    "markdown-it": "^8.4.1",
    "markdown-it-anchor": "^4.0.0",
    "micromatch": "^3.1.3",
    "mime": "^1.4.1",
    "open": "0.0.5",
    "openport": "0.0.4",
    "pug": "^2.0.3",
    "send": "^0.16.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "nyc": "^11.7.1",
    "xo": "^0.20.3"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "rules": {
      "no-console": 1,
      "space-before-function-paren": 0,
      "unicorn/escape-case": 0
    }
  },
  "ava": {
    "failfast": true
  }
}
